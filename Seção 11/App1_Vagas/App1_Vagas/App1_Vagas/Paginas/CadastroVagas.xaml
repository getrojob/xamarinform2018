<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1_Vagas.Paginas.CadastroVagas">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Vaga" />
            <Entry Placeholder="Empresa"/>
            <Entry Placeholder="Quantidade" />
            <Entry Placeholder="Cidade"/>
            <Entry Placeholder="Salario"/>
            <Label Text="Descrição do Cargo"/>
            <Editor HeightRequest="200"/>
            <StackLayout Orientation="Horizontal">
                <Label Text="Tipo de contratação"/>
                <Label Text="CLT"/>
                <Switch/>
                <Label Text="PJ" />
            </StackLayout>
            <Entry Placeholder="Telefone"/>
            <Entry PlaceHolder="Email"/>
            <Button Text="Salvar"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>