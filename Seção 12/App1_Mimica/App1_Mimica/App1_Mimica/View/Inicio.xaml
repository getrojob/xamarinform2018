        <StackLayout>
            <Label Text="Nome de Grupo 1" />
            <Entry Placeholder="(Opcional1)"/>
            <Label Text="Nome de Grupo 2" />
            <Entry Placeholder="(Opcional2)"/>
            <Label Text="Nível" />
            <Picker>
                <Picker.Items>
                    <x:String>Aleatório</x:String>
                    <x:String>Fácil</x:String>
